@model dangNhapDangKy.Models.CheckoutViewModel

<h2>Thanh Toán</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="FullName">Họ và Tên</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Số điện thoại</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Đặt hàng</button>
</form>

<a asp-controller="Cart" asp-action="Index" class="btn btn-secondary">Về giỏ hàng</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
