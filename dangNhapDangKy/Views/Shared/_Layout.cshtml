        new CozeWebSDK.WebChatClient({
            config: {
                bot_id: '7370788916515307521',
            },
            componentProps: {
                title: 'TPK-AI',
            },
        });
    </script>
    <script>
        const client = new CozeWebSDK.WebChatClient(options);

        client.destroy();
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>