@model dangNhapDangKy.Models.Cart

<h2>Your Cart</h2>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>
                        <form asp-action="UpdateCartItemQuantity" method="post" style="display:inline-block">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" style="width: 80px; display:inline-block" />
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </td>
                    <td>@item.Product.Price.ToString("c")</td>
                    @{
                        var totalPrice = item.Product.Price * item.Quantity;
                    }
                    <td>@totalPrice.ToString("c")</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.GetTotalPrice().ToString("c")</h3>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
    <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">Checkout</a>
}
