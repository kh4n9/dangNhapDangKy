@model dangNhapDangKy.Models.Product

@{
    ViewData["Title"] = "Tạo mới";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Tạo mới</h1>

<h4>Sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Danh mục</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label">Thương hiệu</label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label for="imageUrl" class="control-label">Hình ảnh</label>
                <input type="file" name="imageUrl" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div id="sizeFields">
                <!-- Các trường nhập liệu cho Size sẽ được thêm vào đây bằng JavaScript -->
            </div>

            <button type="button" onclick="addSizeField()">Thêm Size</button>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    function addSizeField() {
        var sizeField = document.createElement("div");
        sizeField.innerHTML = `
                <label for="sizes">Size:</label>
                <input type="text" name="sizes" class="form-control" />
            `;
        document.getElementById("sizeFields").appendChild(sizeField);
    }
</script>
